{
    "name": "@bluedot/db",
    "version": "0.0.1",
    "private": true,
    "main": "src/index.ts",
    "types": "src/index.ts",
    "scripts": {
        "sync-fields": "ts-node src/scripts/sync-fields.ts",
        "push": "drizzle-kit push && npm run sync-fields",
