        "drizzle-orm": "^0.43.1",
        "pg": "^8.15.6",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@bluedot/eslint-config": "*",
        "@bluedot/typescript-config": "*",
        "@types/node": "^22.13.2",
        "drizzle-kit": "^0.31.1",
        "eslint": "^8.57.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.8.3"
    }
}
