{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["CI", "NEXT_PUBLIC_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**", "!dist/cache/**"]
    },
    "lint": {
      "dependsOn": ["@bluedot/eslint-config#build"]
    },
    "lint:fix": {
      "cache": false
    },
    "test": {},
    "start": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV"]
    }
  }
}
