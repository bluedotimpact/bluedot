{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["CI", "NEXT_PUBLIC_*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.stories.{tsx,jsx,mdx}"],
      "outputs": ["dist/**", "!dist/cache/**"]
    },
    "build:storybook": {},
    "lint": {},
    "lint:fix": {
      "cache": false
    },
    "test": {},
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
